<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="reQuest.RegistrationPage">
  <StackLayout>
    <StackLayout.Padding>
      <OnPlatform x:TypeArguments="Thickness"
                  iOS="0, 20, 0, 0"
                  Android="0, 0, 0, 0"
                  WinPhone="0, 0, 0, 0" />
    </StackLayout.Padding>
	    <Label Text="registration" HorizontalOptions="Center" />
	    <Button x:Name="loginButton" Text="Sign in" MinimumHeightRequest="30" Clicked="loginButton_Clicked" />
	    <Button x:Name="sidButton" Text="Get SID" MinimumHeightRequest="30" Clicked="sidButton_Clicked" />
		<Label Text="{Binding ExternalID}" MinimumHeightRequest="30" />
	    <Label Text="{Binding ExternalToken}" MinimumHeightRequest="30" />


	</StackLayout>
</ContentPage>
